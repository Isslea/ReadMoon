@inject UserManager<User> UserManager;

@if (!User.Identity.IsAuthenticated)
{
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Login">
        <i class="bi bi-box-arrow-in-right"></i> Zaloguj się
    </a>
    <span style="padding: 5px;"></span>
    <a class="btn btn-outline-success my-2 my-sm-0" asp-controller="Account" asp-action="Register">
        <i class="bi bi-box-arrow-in-right"></i> Zarejestruj się
    </a>
}
else
{

        <li class="nav-item dropdown list-unstyled">
            <button class="btn btn-outline-success dropdown-toggle" id="profile-btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                Witaj @UserManager.GetUserName(User)
            </button>
            <ul class="dropdown-menu" aria-labelledby="profile-btn">
                <li>
                    <a class="nav-link dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">
                        Zmień hasło
                    </a>
                </li>
                    
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="dropdown-item" asp-controller="" asp-action="">
                           Pustka Admina
                        </a>
                    </li>
                }
            </ul>
        </li>
        <span style="padding: 5px;"></span>
    <form asp-controller="Account" asp-action="Logout">
        <button class="btn btn-outline-danger my-2 my-sm-0">
            <i class="bi bi-box-arrow-in-right"></i> Wyloguj się
        </button>
    </form>
}