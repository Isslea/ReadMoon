@model ReadMoon.Data.ReviewVM

@{
ViewData["Title"] = "Edytuj koemnatrz";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1 class="text-center">Edytuj Komentarz</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Text" class="control-label"></label>
                        <input asp-for="Text" class="form-control" />
                        <span asp-validation-for="Text" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Potwiedź" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-primary"  asp-controller="Book" asp-action="Details" asp-route-id="@Model.BookId"> Wróć</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}